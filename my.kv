WindowManager:
    MainWindow:
    NayaWindow:

<MainWindow>:
    name: "main"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "Main Screen"
            font_size: 25

        Button:
            text: "Click here for Naya's Screen"
            font_size: 32
            on_release:
                app.root.current = "naya"
                root.manager.transition.direction = "left"


<NayaWindow>:
    id: naya_widget
    name: "naya"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 50
        spacing: 20

        Label:
            text: "Welcome to my screen"
            font_size: 25

        Image:
            id: naya_image
            source: ""


        FileChooserIconView:
            id: filechooser
            on_selection: naya_widget.selected(filechooser.selection)

        Button:
            text: "Main Menu"
            font_size: 32
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
