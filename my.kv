WindowManager:
    MainWindow:
    NayaWindow:

<MainWindow>:
    name: "main"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "Main Screen"
            font_size: 25

        Button:
            text: "Click here for Naya's Screen"
            font_size: 32
            on_release:
                app.root.current = "naya"
                root.manager.transition.direction = "left"


<NayaWindow>:
    name: "naya"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 50
        spacing: 20

        Image:
            id: empty
            source: '/Users/zhenaya/github/kivy_tutorial/sky.jpg'
            allow_stretch: False
            keep_ratio: True

        GridLayout:
            cols: 1

            Button:
                text: "Click here for a surprise"
                font_size: 50
                on_release:
                    empty.source = '/Users/zhenaya/github/kivy_tutorial/beach.jpg'
                on_press:
                    empty.source = '/Users/zhenaya/github/kivy_tutorial/sky.jpg'
        Button:
            text: "Go back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
